<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/friend_select_footer_container"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:background="@drawable/friend_outer_background"
    android:orientation="horizontal"
    android:paddingBottom="4dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="4dp" >

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/previous_step" />

    <RelativeLayout
        android:id="@+id/friends_invited_footer_layout"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:padding="0dp" >

        <TextView
            android:id="@+id/number_friends_invited"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="選擇朋友"
            android:textSize="15sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/forward_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/next_step" />

</LinearLayout>