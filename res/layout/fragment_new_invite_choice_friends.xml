<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_new_invite_choice_friend_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dotchi1.NewInviteChoiceFriendFragment" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal" >
		<ImageView 
		    android:id="@+id/new_invite_friend_choice_friend_icon_imageview"
		    android:layout_width="40dp"
	    	android:layout_height="match_parent"
	    	android:src="@drawable/new_invite_icon_friend"
	    	android:layout_gravity="center_vertical"/>
		<TextView 
		    android:id="@+id/new_invite_friend_choice_friend_total_textview"
		    android:layout_width="wrap_content"
	    	android:layout_height="match_parent"
	    	android:layout_marginLeft="10dp"
	    	android:textColor="@color/brown_dark_text"
	    	android:gravity="center"
	    	android:textStyle="bold"
	    	android:text="0"
	    	android:textSize="20sp"/>
	</LinearLayout>
	<RelativeLayout 
	    android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_weight="1" >
		<LinearLayout
		    android:id="@+id/new_invite_friend_choice_empty_view"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerInParent="true" 
		    android:orientation="horizontal" >		    
		    <ImageView 
		        android:id="@+id/new_invite_friend_choice_icon_add_imageview"
		        android:layout_width="21dp"
	    		android:layout_height="21dp"
	    		android:alpha="0.4"
	    		android:src="@drawable/new_invite_icon_add_forcus"
	    		android:layout_marginRight="10dp"/>
		    <TextView 
		        android:id="@+id/new_invite_friend_choice_add_friend_textview"
		    	android:layout_width="wrap_content"
	    		android:layout_height="match_parent"
	    		android:textColor="@color/gray_hint_text"
	    		android:text="@string/new_invite_select_friends"
	    		android:gravity="center"
	    		android:textSize="20sp"
	    		android:clickable="true"/>
	    </LinearLayout>
	    <GridView
		    android:id="@+id/invite_friend_choice_gridview"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:horizontalSpacing="5dp"
		    android:verticalSpacing="5dp"
		    android:layout_marginLeft="10dp"
		    android:layout_marginRight="10dp"
		    android:numColumns="5" />
	</RelativeLayout>
    
	
	
</LinearLayout>
