<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp">
    
    <RelativeLayout
        android:id="@+id/blank_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
    </RelativeLayout>
    
    <RelativeLayout
	    android:id="@+id/game_card_container"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:padding="2dp" >

	    <ImageView
	        android:id="@+id/game_card_profile_image"
	        android:layout_width="60dp"
	        android:layout_height="match_parent"
	        android:layout_marginTop="5dp"
	        android:layout_marginBottom="5dp"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:src="@drawable/gs_card_default_dp" />
	
	    
	    <TextView
	        android:id="@+id/game_card_title"
	        android:layout_width="200dp"
	        android:layout_height="28dp"
	        android:layout_marginLeft="10dp"
	        android:layout_alignTop="@+id/game_card_profile_image"
	        android:layout_toRightOf="@+id/game_card_profile_image"
	        android:textColor="@color/black"
	        android:text="Game Card Title"  />
	    
	    <TextView
	        android:id="@+id/game_card_content"
	        android:layout_width="230dp"
	        android:layout_height="30dp"
	        android:layout_marginLeft="10dp"
	        android:layout_toRightOf="@+id/game_card_profile_image"
	       	android:textColor="@color/black"
	        android:layout_below="@+id/game_card_title"
	        android:textSize="12sp"
	        android:text="Game card content here." />
	    
	</RelativeLayout>
</RelativeLayout>