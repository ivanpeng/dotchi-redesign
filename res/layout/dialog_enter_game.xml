<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="313dp"
    android:layout_height="350dp"
    android:orientation="vertical" >
    
	<include
	    android:layout_width="match_parent"
	    android:layout_height="168dp" 
	    layout="@layout/dialog_template"/>

	<include
	    android:layout_width="match_parent"
	    android:layout_height="80dp"
	    layout="@layout/dialog_friends_template" />
	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:layout_margin="0dp"
	    android:padding="0dp"
	    android:orientation="horizontal" >

	    <ImageView
	        android:id="@+id/participate_no_button"
	        android:layout_width="0dp"
	        android:layout_gravity="right"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:src="@drawable/participate_in_game_no" />
	    <ImageView
	        android:id="@+id/participate_yes_button"
	        android:layout_gravity="left"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:src="@drawable/participate_in_game_yes" />
	</LinearLayout>
</LinearLayout>
