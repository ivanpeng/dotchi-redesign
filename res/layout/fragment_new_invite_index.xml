<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_new_invite_index_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dotchi1.NewInviteIndexFragment" >
	<LinearLayout 
	    android:layout_width="match_parent" 
	    android:layout_height="match_parent"
	    android:orientation="vertical">
	    <RelativeLayout 
    	    android:layout_width="match_parent" 
	    	android:layout_height="match_parent"
	    	android:layout_weight="0.29" >
    	    <TextView 
    	        android:id="@+id/new_invite_index_textview"
    	        android:layout_width="match_parent" 
	    		android:layout_height="match_parent"
	    		android:layout_centerHorizontal="true"
	    		android:layout_centerVertical="true"
				android:gravity="center"
				android:textColor="@color/gray_hint_text"
				android:textSize="16sp"
				android:text="@string/new_invite_index_add_some_choice"
				/>
    	</RelativeLayout>
    	<RelativeLayout 
    	    android:layout_width="match_parent" 
	    	android:layout_height="match_parent"
	    	android:layout_weight="0.24" >
    	    <Button 
    	        android:id="@+id/new_invite_index_dotchi_button"
    	        android:layout_width="350px" 
	    		android:layout_height="105px"
	    		android:layout_centerHorizontal="true"
	    		android:layout_centerVertical="true"
	    		android:layout_marginTop="10px"
	    		android:layout_marginBottom="10px"
	    		android:background="@drawable/new_invite_icon_dotchi_giftsw"/>
    	    <Button 
    	   		android:id="@+id/new_invite_index_red_point_button"
    	        android:layout_width="35px" 
	    		android:layout_height="35px" 
	    		android:text="1"
	    		android:textSize="11sp"
	    		android:layout_alignRight="@+id/new_invite_index_dotchi_button"
	    		android:layout_alignTop="@+id/new_invite_index_dotchi_button"
	    		android:layout_marginTop="20px"
	    		android:layout_marginRight="35px"
	    		android:textColor="@color/white"
	    		android:background="@drawable/new_invite_icon_red_point"/>
    	</RelativeLayout>
    	
    	<RelativeLayout 
    	    android:layout_width="match_parent" 
	    	android:layout_height="match_parent"
	    	android:layout_weight="0.24" >
    	    <Button 
    	        android:id="@+id/new_invite_index_favor_button"
    	        android:layout_width="350px" 
	    		android:layout_height="105px"
	    		android:layout_centerHorizontal="true"
	    		android:layout_centerVertical="true"
	    		android:layout_marginTop="10px"
	    		android:layout_marginBottom="10px"
	    		android:background="@drawable/new_invite_icon_favor_button"/>
    	</RelativeLayout>
    	<RelativeLayout 
    	    android:layout_width="match_parent" 
	    	android:layout_height="match_parent"
	    	android:layout_weight="0.24" >
    	    <Button 
    	        android:id="@+id/new_invite_index_self_choice_button"
    	        android:layout_width="350px" 
	    		android:layout_height="105px"
	    		android:layout_centerHorizontal="true"
	    		android:layout_centerVertical="true"
	    		android:layout_marginTop="10px"
	    		android:layout_marginBottom="10px"
	    		android:background="@drawable/new_invite_icon_self_choice"/>
    	</RelativeLayout>
    
    	<RelativeLayout 
    	    android:layout_width="match_parent" 
	    	android:layout_height="match_parent"
	    	android:layout_weight="0.35" >
    	</RelativeLayout>
	</LinearLayout>
</RelativeLayout>
