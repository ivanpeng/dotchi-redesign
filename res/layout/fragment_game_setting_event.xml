<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="7dp"
        android:paddingRight="5dp" 
        android:background="@drawable/gs_top_menu_background">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="left"
            android:padding="0dp" >

            <ImageView
                android:id="@+id/gs_date_picker_text"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/gs_date" />

            <TextView
                android:id="@+id/gs_date_picker_button"
                android:layout_width="80dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/gs_date_picker_text"
                android:background="@drawable/gs_date_time_text_background"
                android:clickable="true"
                android:gravity="center"
                android:textSize="11sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="0dp" >

            <ImageView
                android:id="@+id/gs_time_picker_text"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/gs_time" />

            <TextView
                android:id="@+id/gs_time_picker_button"
                android:layout_width="80dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/gs_time_picker_text"
                android:background="@drawable/gs_date_time_text_background"
                android:clickable="true"
                android:gravity="center"
                android:textSize="11sp" />
        </RelativeLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/game_card_list"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="6dp" />

</LinearLayout>