<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_setting_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gs_background"
    android:orientation="vertical" >
    
   	<LinearLayout
	    android:layout_width="0dp"
	    android:layout_height="0dp"
	    android:padding="0dp"
	    android:background="@color/transparent"
	    android:focusable="true"
	    android:focusableInTouchMode="true">
	</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
	    android:paddingLeft="15dp"
	    android:paddingRight="15dp"
	    android:gravity="center_horizontal"
	    android:orientation="vertical"
	    android:background="@drawable/gs_top_menu_background" >
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="45dp"
	        android:background="@drawable/gs_search_bar_background"
	        android:orientation="horizontal" >
	        <EditText
		        android:id="@+id/gs_title_text"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:gravity="center_vertical"
		        android:hint="請輸入標題" />
		
		    <ImageView
		        android:id="@+id/gs_cancel_button"
		        android:layout_width="32dp"
		        android:layout_height="match_parent"
		        android:padding="3dp"
		        android:scaleType="fitCenter"
		        android:src="@drawable/search_bar_cancel" />
		</LinearLayout>
		
	</LinearLayout>
   
	<LinearLayout
	    android:id="@+id/game_setting_fragment_container"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:layout_marginTop="3dp"
	  	android:orientation="vertical" >
	    
	</LinearLayout>
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:orientation="vertical">
        
        <include layout="@layout/game_select_footer"/>
    </LinearLayout>
        
    
</LinearLayout>

