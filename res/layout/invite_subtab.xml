<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/invite_top_header_background" >

        <RelativeLayout 
            android:id="@+id/dotchi_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="0dp" >

            <ImageView
                android:id="@+id/dotchi_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/invite_tab_pressed_background"
                android:padding="6dp"
                android:src="@drawable/invite_dotchi"
                android:tag="0" />

            <ImageView
                android:id="@+id/invite_dotchi_pointer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@+id/dotchi_tab"
                android:padding="0dp"
                android:src="@drawable/arrow_pointer"
                android:visibility="visible" />
        </RelativeLayout>

        <RelativeLayout 
            android:id="@+id/dotchi_quick_setup_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="0dp" >
	        <ImageView
	            android:id="@+id/dotchi_quick_setup_tab"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:padding="6dp"
	            android:src="@drawable/invite_dotchi_quick_setup"
	            android:tag="1" />
	        <ImageView
                android:id="@+id/invite_quick_setup_pointer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@+id/dotchi_quick_setup_tab"
                android:padding="0dp"
                android:src="@drawable/arrow_pointer"
                android:visibility="invisible" />
        </RelativeLayout>

		<RelativeLayout 
            android:id="@+id/dotchi_package_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="0dp" >
	        <ImageView
	            android:id="@+id/dotchi_package_tab"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:padding="5dp"
	            android:visibility="invisible"
	            android:src="@drawable/invite_dotchi_package"
	            android:tag="2" />
	        <ImageView
                android:id="@+id/package_pointer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@+id/dotchi_package_tab"
                android:padding="0dp"
                android:src="@drawable/arrow_pointer"
                android:visibility="invisible" />
        </RelativeLayout>

</TableRow>
