<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_new_invite_favor_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dotchi1.NewInviteFavorFragment" >

    <RelativeLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="45px"
        android:layout_marginTop="20px"
        android:layout_marginBottom="10px" >
	    <Button 
	        android:id="@+id/new_invite_favor_back_to_index_button"
	        android:layout_width="90px"
	        android:layout_height="match_parent"
	        android:layout_marginLeft="30px"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:background="@drawable/new_invite_icon_back_to_index"/>
		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:orientation="horizontal"
		    android:layout_centerInParent="true" >
			<ImageView 
			    android:id="@+id/new_invite_favor_icon_imageview"
			    android:layout_width="0dp"
			    android:layout_weight="1"
			    android:layout_height="match_parent"
			    android:padding="5dp"
			    android:background="@drawable/new_invite_icon_start"/>  
			<TextView 
			    android:id="@+id/new_invite_favor_total_textview"
			    android:layout_width="0dp"
			    android:layout_weight="1"
			    android:layout_height="match_parent"
			    android:layout_marginLeft="8dp"
			    android:text="10"
			    android:gravity="center"
			    android:textSize="16sp"
			    android:textColor="@color/brown_text"/>
		</LinearLayout>
	</RelativeLayout>

    <RelativeLayout
        android:id="@+id/new_invite_favor_points_layout"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/new_invite_favor_dynamic_item_layout" >
    </RelativeLayout>

    <LinearLayout 
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        android:layout_centerHorizontal="true"
	    android:layout_below="@+id/fragment_container" >
	    <ListView
	        android:id="@+id/my_dotchi_package_list"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:divider="@color/transparent"
	        android:dividerHeight="10dp" >
	    </ListView>
    </LinearLayout>

</RelativeLayout>
