<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_new_invite_dotchi_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dotchi1.NewInviteDotchiFragment" >

    <RelativeLayout
        android:id="@+id/fragment_header"
        android:layout_width="match_parent"
        android:layout_height="45px"
        android:layout_marginTop="20px"
        android:layout_marginBottom="10px" >
	    
	    
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_centerInParent="true"
	        android:orientation="horizontal" >
		    <ImageView 
		        android:id="@+id/new_invite_dotchi_gift_imageview"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="match_parent"
		        android:background="@drawable/new_invite_icon_gift"/>
		    
		    <TextView 
		        android:id="@+id/new_invite_dotchi_gift_textview"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="match_parent"
		        android:layout_marginLeft="8dp"
		        android:text="10"
		        android:gravity="center"
		        android:textSize="13sp"
		        android:textColor="@color/brown_text"/>
    	</LinearLayout>
    </RelativeLayout>

    <LinearLayout 
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:orientation="vertical" 
        android:layout_centerHorizontal="true"
	    android:layout_below="@+id/fragment_header" >
	    <ListView
	        android:id="@+id/hot_dotchi_package_list"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:divider="@color/transparent"
	        android:dividerHeight="10dp" >
	    </ListView>
    </LinearLayout>
</RelativeLayout>
