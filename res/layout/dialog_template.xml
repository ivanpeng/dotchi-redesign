<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/dialog_confirm_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="center"
        android:src="@drawable/dialog_confirm_text"
        android:background="@drawable/dialog_footer_color" />

    <ImageView
        android:id="@+id/dialog_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="14dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/dialog_cancel" />


    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/dialog_confirm_title"
        android:layout_margin="7dp"
        android:background="@drawable/border"
        android:orientation="vertical" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp" >

            <TextView
                android:id="@+id/dotchi_game_set_datetime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                android:gravity="center_vertical|left"
                android:text="兜聚日期＆時間"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/dotchi_game_set_datetime_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical|left"
                android:textColor="@color/red"
                android:textSize="15sp" />
        </TableRow>

        <TextView
            android:id="@+id/dotchi_game_set_title"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical|left"
            android:text="Title here"
            android:textColor="@color/black"
            android:textSize="17sp" />
    </LinearLayout>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitStart"
            android:src="@drawable/dotchi_type_title" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitStart"
            android:src="@drawable/private_title" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitStart"
            android:src="@drawable/num_votes_title" />
    </TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" 
        android:layout_below="@+id/tableRow1"
        android:orientation="horizontal">
        
	    <ImageView
	        android:id="@+id/dotchi_type_picture"
	        android:layout_width="30dp"
	        android:layout_height="match_parent"
	        android:src="@drawable/event_logo" />
	    
	    <ImageView
            android:id="@+id/dotchi_is_private_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:scaleType="fitEnd"
            android:src="@drawable/dialog_not_public" />
	    <ImageView
            android:id="@+id/dotchi_is_personal_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="10"
			android:layout_marginLeft="10dp"
            android:scaleType="fitStart"
            android:src="@drawable/dialog_not_personal" />
	    <RelativeLayout 
			    android:layout_width="30dp"
			    android:layout_height="match_parent"
			    android:layout_weight="2">
			<ImageView
			    android:id="@+id/dotchi_num_yes_image"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:scaleType="fitStart"
			    android:src="@drawable/num_yes_not_entered" />

			<TextView
			    android:id="@+id/num_yes_number"
			    android:layout_width="14dp"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_centerVertical="true"
			    android:layout_marginLeft="8dp"
			    android:gravity="center"
			    android:text="1"
			    android:visibility="invisible"
			    android:textColor="@color/white"
			    android:textSize="11sp" />

		</RelativeLayout>
    </LinearLayout>


</RelativeLayout>
