<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/top_header_background" >

        <RelativeLayout 
            android:id="@+id/feeds_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="0dp" >

            <ImageView
                android:id="@+id/feeds_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="6dp"
                android:src="@drawable/feeds_image"
                android:tag="0" />

            <ImageView
                android:id="@+id/feeds_pointer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@+id/feeds_tab"
                android:padding="0dp"
                android:src="@drawable/arrow_pointer"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout 
            android:id="@+id/pending_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="0dp" >
	        <ImageView
	            android:id="@+id/pending_image_tab"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:padding="6dp"
	            android:src="@drawable/pending_image"
	            android:tag="1" />
	        <ImageView
                android:id="@+id/pending_pointer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@+id/pending_image_tab"
                android:padding="0dp"
                android:src="@drawable/arrow_pointer"
                android:visibility="invisible" />
        </RelativeLayout>
		<RelativeLayout 
            android:id="@+id/events_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="0dp" >
	        <ImageView
	            android:id="@+id/events_tab"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:padding="5dp"
	            android:src="@drawable/events_image"
	            android:tag="2" />
	        <ImageView
                android:id="@+id/events_pointer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@+id/events_tab"
                android:padding="0dp"
                android:src="@drawable/arrow_pointer"
                android:visibility="invisible" />
        </RelativeLayout>
</TableRow>