<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black_border" >
    
    <LinearLayout 
	    android:id="@+id/swipe_right_container"
	    android:layout_width="match_parent"
	    android:layout_height="180dp"
	    android:orientation="vertical">
	    
	</LinearLayout>
    <LinearLayout
        android:id="@+id/new_game_choice_container"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/white"
        android:orientation="vertical" >
	    <TextView
	        android:id="@+id/date_image_year"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:layout_marginLeft="60dp"
	        android:textColor="@color/black"
	        android:gravity="center_vertical|left"
	        android:textSize="22sp"
	        android:text="2014 年" />
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:gravity="bottom"
	        android:orientation="horizontal" >
	        
		    <TextView
		        android:id="@+id/date_image_date"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="0.6"
		        android:textStyle="bold"
		        android:textColor="@color/black"
		        android:gravity="bottom|right"
		        android:textSize="22sp"
		        android:text="10月30號" />
	
		    <TextView
		        android:id="@+id/date_image_day_of_week"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_marginLeft="15dp"
		        android:layout_weight="0.4"
		        android:gravity="bottom|left"
		        android:text="星期三"
		        android:textColor="@color/black"
		        android:textSize="15sp" />
	
	    </LinearLayout>
	    
	    <!-- Time input...may be invisible -->
	    <LinearLayout
	        android:id="@+id/date_image_time_box"
	        android:layout_width="121dp"
	        android:layout_height="60dp"
	        android:layout_marginTop="8dp"
	        android:layout_gravity="center"
	        android:orientation="horizontal"
	        android:background="@drawable/black_border" >
	        
	        <RelativeLayout
	            android:layout_width="60dp"
	            android:layout_height="match_parent" >
	            
	            <TextView
	                android:id="@+id/date_image_ampm"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_margin="2dp"
	                android:textSize="14sp"
	                android:textColor="@color/black"
	                android:text="PM" />
	            
	            <TextView
	                android:id="@+id/date_image_hour"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="18sp"
	                android:textColor="@color/black"
	                android:text="10"
	                android:layout_centerInParent="true" />
	        </RelativeLayout>
	        
	        <LinearLayout
	            android:layout_width="1dp"
	            android:layout_height="match_parent"
	            android:background="@color/black"/>
	        
	        <RelativeLayout
	            android:layout_width="60dp"
	            android:layout_height="match_parent" >
	            
	            <TextView
	                android:id="@+id/date_image_minute"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="18sp"
	                android:textColor="@color/black"
	                android:text="54"
	                android:layout_centerInParent="true" />
	            
	        </RelativeLayout>
	    </LinearLayout>
    
    
	</LinearLayout>
</RelativeLayout>
